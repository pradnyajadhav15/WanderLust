<% layout("/layouts/boilerplate.ejs") %>
<body class="edit-listing-body container-fluid p-0">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8 gsap-form">
      <h1 class="mb-3 edit-listings-heading text-center">Edit Listing</h1>
      
      <form
        method="post"
        action="/listings/update/<%= listing._id %>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <!-- Title Field -->
        <div class="mb-3 title">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            value="<%= listing.title %>"
            placeholder="Enter Title"
            name="listing[title]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Title is required!</div>
        </div>

        <!-- Description Field -->
        <div class="mb-3 description">
          <label for="description" class="form-label">Description</label>
          <textarea
            type="text"
            placeholder="Enter description"
            name="listing[description]"
            class="form-control"
            required
          >
            <%= listing.description %>
          </textarea>
          <div class="invalid-feedback">Description is required!</div>
        </div>

     <!-- Old Image Display -->
<div class="mb-3 oldimage">
  <label for="image" class="form-label">Current Image</label>
  <div class="d-flex justify-content-center">
    <img
      src="<%= originalImageUrl %>"
      alt="current image"
      class="img-fluid"
      style="max-width: 250px; border-radius: 8px;"
    />
  </div>
  <small class="text-muted d-block text-center mt-2">
    This is the current image for your listing.
  </small>
</div>


        <!-- Image Upload Field -->
        <div class="mb-3 image">
          <label for="image" class="form-label">Upload New Image (Optional)</label>
          <input
            type="file"
            name="listing[image]"
            class="form-control"
          />
          <div class="invalid-feedback">Image is required!</div>
        </div>

        <!-- Price and Country Fields -->
        <div class="row price-country">
          <div class="col-md-4 mb-3">
            <label for="price" class="form-label">Price (â‚¹)</label>
            <input
              type="number"
              value="<%= listing.price %>"
              placeholder="Enter price"
              name="listing[price]"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price is required!</div>
          </div>

          <div class="col-md-8 mb-3">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              value="<%= listing.country %>"
              placeholder="Enter country"
              name="listing[country]"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country is required!</div>
          </div>
        </div>

        <!-- Location Field -->
        <div class="mb-3 location">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            value="<%= listing.location %>"
            placeholder="Enter location"
            name="listing[location]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location is required!</div>
        </div>

        <!-- Submit Button -->
        <button class="btn btn-dark edit-btn mt-3 mb-3 w-100">Update Listing</button>
      </form>
    </div>
  </div>

  <script>
    // Example of form validation, can be customized based on your needs.
    (function () {
      'use strict';
      window.addEventListener('load', function () {
        const forms = document.getElementsByClassName('needs-validation');
        Array.prototype.filter.call(forms, function (form) {
          form.addEventListener('submit', function (event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();
  </script>
</body>
