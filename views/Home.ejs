<style>
  /* Baby Blue Color Palette */
  :root {
    --baby-blue-light: #e6f7ff;
    --baby-blue-primary: #b3e0ff;
    --baby-blue-medium: #89cff0;
    --baby-blue-dark: #5d9cec;
    --baby-blue-darker: #3a7bd5;
    --baby-blue-shadow: rgba(137, 207, 240, 0.15);
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Section transitions */
  section {
    transition: all 0.4s ease;
  }

  .section-fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .section-fade-in.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Card animations */
  .card.hover-up {
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    border-radius: 1rem;
  }

  .card.hover-up:hover {
    transform: translateY(-8px);
    box-shadow: 0 10px 24px var(--baby-blue-shadow);
    background-color: var(--baby-blue-light);
  }

  /* Button animations */
  .btn-primary, .btn-outline-dark {
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    transform: translateY(0);
  }

  .btn-primary:hover, .btn-outline-dark:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px var(--baby-blue-shadow);
  }

  /* Text animations */
  .text-gradient {
    background: linear-gradient(to right, var(--baby-blue-medium), var(--baby-blue-primary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: background 0.5s ease;
  }

  /* Page load animation */
  body {
    animation: fadeIn 0.8s ease-out forwards;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* Existing styles with enhanced transitions */
  .section-heading {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--baby-blue-darker);
    transition: color 0.3s ease;
  }

  .btn-primary {
    background-color: var(--baby-blue-medium);
    border-color: var(--baby-blue-medium);
    color: white;
  }

  .btn-primary:hover {
    background-color: var(--baby-blue-dark);
    border-color: var(--baby-blue-dark);
  }

  .btn-outline-dark {
    border-color: var(--baby-blue-medium);
    color: var(--baby-blue-darker) !important;
  }

  .bg-light-blue {
    background-color: var(--baby-blue-light);
  }

  .bg-dark-blue {
    background: linear-gradient(135deg, var(--baby-blue-medium), var(--baby-blue-darker));
  }

  .text-dark-blue {
    color: var(--baby-blue-darker) !important;
  }

  .bg-gradient-blue {
    background: linear-gradient(135deg, var(--baby-blue-medium), var(--baby-blue-darker));
  }

  /* Parallax effect */
  .parallax-section {
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }

  /* New baby blue specific styles */
  .bg-light-pink, .bg-dark-pink {
    background-color: var(--baby-blue-light);
  }
  
  .text-dark-pink {
    color: var(--baby-blue-darker);
  }
  
  .bg-dark-pink {
    background: linear-gradient(135deg, var(--baby-blue-medium), var(--baby-blue-darker));
  }
</style>

